<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="oval">
            <gradient android:angle="45"
                android:endColor="@color/light_grey"
                android:startColor="@color/light_grey" />
            <padding android:bottom="2dp" android:left="2dp" android:right="2dp" android:top="2dp" />
            <corners android:radius="10dip" />
            <stroke android:width="1dp" android:color="@color/light_grey" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <gradient android:angle="45" android:endColor="@color/light_grey" android:startColor="@color/light_grey" />
            <padding android:bottom="2dp" android:left="2dp" android:right="2dp" android:top="2dp" />
            <corners android:radius="10dip" />

        </shape>
    </item>
</selector>