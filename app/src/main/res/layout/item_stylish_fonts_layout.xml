<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginVertical="4dp"
    android:layout_marginHorizontal="10dp"
    android:background="@drawable/edit_text_bg"
    android:layout_height="67dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/fontTextView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/app_name"
            android:textColor="@color/black"
            android:padding="16dp"
            android:textSize="@dimen/_14sdp"
            android:gravity="start|center_vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_whatsapp"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/btn_whatsapp"
            android:layout_width="@dimen/_23sdp"
            android:layout_height="@dimen/_23sdp"
            android:src="@drawable/icon_whatsapp"
            android:layout_marginEnd="@dimen/_6sdp"
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@id/fontTextView"
            app:layout_constraintEnd_toStartOf="@id/btn_copy"
            app:layout_constraintTop_toTopOf="@id/fontTextView"
            app:layout_constraintBottom_toBottomOf="@id/fontTextView"
            />

        <ImageView
            android:id="@+id/btn_copy"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/icon_copy"
            android:layout_marginEnd="@dimen/_6sdp"
            app:layout_constraintStart_toEndOf="@id/btn_whatsapp"
            app:layout_constraintEnd_toStartOf="@id/btn_share"
            app:layout_constraintTop_toTopOf="@id/fontTextView"
            app:layout_constraintBottom_toBottomOf="@id/fontTextView"
            />

        <ImageView
            android:id="@+id/btn_share"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/share_icon"
            android:layout_marginEnd="10dp"
            app:layout_constraintStart_toEndOf="@id/btn_copy"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/fontTextView"
            app:layout_constraintBottom_toBottomOf="@id/fontTextView"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>





</com.google.android.material.card.MaterialCardView>